@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# g2o is provided as exported targets (ORB_SLAM3::core, ORB_SLAM3::stuff, etc.)
# and does not require find_dependency. Consumers should link against
# ORB_SLAM3::ORB_SLAM3 which transitively includes all g2o targets.

find_dependency(OpenCV 4.2)
find_dependency(Eigen3 3.3.7 NO_MODULE)

# Ensure ROS 2 install prefix is in CMAKE_PREFIX_PATH for Pangolin lookup
# Pangolin is installed via ros-jazzy-pangolin package at /opt/ros/jazzy
# Check common ROS 2 install locations and add to search path
set(_pangolin_search_paths
    "/opt/ros/jazzy"
    "/opt/ros/humble"
    "/opt/ros/iron"
    "/opt/ros/foxy"
)
foreach(_path IN LISTS _pangolin_search_paths)
    if(EXISTS "${_path}/lib/x86_64-linux-gnu/cmake/Pangolin")
        list(APPEND CMAKE_PREFIX_PATH "${_path}")
        break()
    endif()
endforeach()

find_dependency(Pangolin)

if(@realsense2_FOUND@)
    find_dependency(realsense2)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/ORB_SLAM3Targets.cmake")
